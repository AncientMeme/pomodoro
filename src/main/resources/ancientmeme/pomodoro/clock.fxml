<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx" fx:controller="ancientmeme.pomodoro.PomodoroController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>

  <Text fx:id="modeDisplay" id="mode" text="Session" textAlignment="CENTER"/>
  <Text fx:id="timerDisplay" id="timer" text="00:00" textAlignment="CENTER" />
  <TilePane alignment="CENTER" prefColumns="3" hgap="10" vgap="10">
    <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Button fx:id="startButton" id="start-btn" maxHeight="Infinity" maxWidth="Infinity" onAction="#handleStart"/>
    <Button id="stop-btn" maxHeight="Infinity" maxWidth="Infinity"  onAction="#handleStop"/>
    <Button id="reset-btn" maxHeight="Infinity" maxWidth="Infinity" onAction="#handleReset"/>
  </TilePane>

  <stylesheets>
    <URL value="@clock.css"/>
  </stylesheets>
</VBox>
